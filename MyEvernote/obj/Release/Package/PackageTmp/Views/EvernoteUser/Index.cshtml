@model IEnumerable<MyEvernote.Entities.EvernoteUser>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}
<link href="~/Content/validation-summary.css" rel="stylesheet" />
<h2 class="text-center text-info">Users</h2>

<p class="text-center">
	<a href="@Url.Action("Create")" class="btn signInBtn"><span class="fa fa-plus"></span> Add New User</a>

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SurName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsAdmin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifiedOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifiedUserName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SurName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsAdmin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedOn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModifiedOn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModifiedUserName)
        </td>
	    <td>
            
             @MyBootstrap.LinkButton("/EvernoteUser/Edit/" + @item.Id , "success", "btn-sm",
                "Edit", "edit",string.Empty)

            @MyBootstrap.LinkButton("/EvernoteUser/Details/" + @item.Id , "info", "btn-sm",
                "Details", "id-card", string.Empty)

            @MyBootstrap.LinkButton("/EvernoteUser/Delete/" + @item.Id , "danger", "btn-sm",
                "Delete", "trash", string.Empty)

		    @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
		    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
		    @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
	    </td>
    </tr>
}

</table>
