@model IEnumerable<MyEvernote.Entities.Note>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}
<link href="~/Content/validation-summary.css" rel="stylesheet" />
<br />
<h2 class="text-center text-info">Notes</h2>

<p class="text-center">
    <a href="@Url.Action("Create")" class="btn signInBtn"><span class="fa fa-plus"></span> Create New Note</a>

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsDraft)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LikeCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifiedOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifiedUserName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
	    <tr>
		    <td>
			    @Html.DisplayFor(modelItem => item.Category.Title)
		    </td>
		    <td>
			    @Html.DisplayFor(modelItem => item.Title)
		    </td>
		    <td>
			    @Html.DisplayFor(modelItem => item.Text)
		    </td>
		    <td>
			    @Html.DisplayFor(modelItem => item.IsDraft)
		    </td>
		    <td>
			    @Html.DisplayFor(modelItem => item.LikeCount)
		    </td>
		    <td>
			    @Html.DisplayFor(modelItem => item.CreatedOn)
		    </td>
		    <td>
			    @Html.DisplayFor(modelItem => item.ModifiedOn)
		    </td>
		    <td>
			    @Html.DisplayFor(modelItem => item.ModifiedUserName)
		    </td>
		    <td width="150px">
				
			    @*<button data-bs-toggle="modal" data-bs-target="#modal_comment" data-note-id="@item.Id" type="button" 
			            class="btn btn-success btn-sm">
				    <span class="fa fa-comment"></span>
			    </button>*@

			    @MyBootstrap.LinkButton("/Note/Edit/" + @item.Id, "success", "btn-sm",
				    "Edit", "edit", string.Empty)

			    @MyBootstrap.LinkButton("/Note/Details/" + @item.Id, "info", "btn-sm",
				    "Details", "id-card", string.Empty)

			    @MyBootstrap.LinkButton("/Note/Delete/" + @item.Id, "danger", "btn-sm",
				    "Delete", "trash", string.Empty)


			    @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
		    </td>
	    </tr>
	   
    }

</table>

@MyBootstrap.ModulPopup("modal_comment", "Comments")
<script src="~/Scripts/comment.js"></script>