@using MyEvernote.Entities
@model EvernoteUser

@{
    ViewBag.Title = "Edit Profile";
}
<link href="~/Content/edit-profile.css" rel="stylesheet" />
<link href="~/Content/validation-summary.css" rel="stylesheet" />
<div class="container">
    <div class="row">
        <h2>@ViewBag.Title</h2>
    </div>

    <div class="row">
        @using (Html.BeginForm("EditProfile", "Home", FormMethod.Post, new
        {
            enctype = "multipart/form-data"
        }))
        {
            <div class="form-horizontal row">
                <div class="col-md-3">
                    <img src="~/Images/@Model.ProfileImageFileName" class="img-circle" width="128" height="128" />
                    @Html.HiddenFor(model => model.ProfileImageFileName);
                    <br /><br />
                    <input type="file" name="ProfileImage" id="ProfileImage" class="form-control" /><br />
                    <span class="fa fa-circle-info">&nbsp;</span>
                    <span><i> Please Use jpg, jpeg and png formats </i></span>
                </div>
                <div class="col-md-9">
                    @Html.ValidationSummary(false)
                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2 label-extended" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.SurName, htmlAttributes: new { @class = "control-label col-md-2 label-extended" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.SurName, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2 label-extended" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2 label-extended" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2 label-extended" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn signInBtn" value="  Save  " />
                            @Html.ActionLink("Cancel", "ShowProfile", "Home", null, new { @class = "btn btn-warning" })
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>

</div>