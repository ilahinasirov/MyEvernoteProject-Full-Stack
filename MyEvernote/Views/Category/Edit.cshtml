@model MyEvernote.Entities.Category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}
<link href="~/Content/validation-summary.css" rel="stylesheet" />
<br />
<h2 class="text-center text-info">Edit Category</h2>
<br />
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4" style="background-color: brown; border-radius: 20px">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(false)
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2 text-info" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2 text-info" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group">
                    <div class=" col-md-12 text-center">

                        <button type="submit" class="btn btn-success btn-sm"> <span class="fa fa-check"></span> Save </button>
                        <a href="/Category/Index" class="btn btn-info btn-sm"><span class="fa fa-arrow-left"></span> Back to List </a>

                    </div>
                </div>
            </div>
        }
    </div>
</div>

