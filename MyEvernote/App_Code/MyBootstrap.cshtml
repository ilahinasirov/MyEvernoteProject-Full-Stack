@helper ModulPopup(string id = "myModal", string title = "Modal Title", bool showCloseButton = true)
{
    <!-- Modal -->
    <div class="modal fade" id="@id" name="@id" tabindex="-1" aria-labelledby="@(id + "_label")" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header" id="@(id + "_header")">
                    <h1 class="modal-title fs-5" id="@(id + "_label")">@title</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="@(id + "_body")">
                    ...
                </div>
	            <div class="modal-footer" id="@(id + "_footer")">
                    @if (showCloseButton == true)
                    {
	                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

                    }
	            </div>
            </div>
        </div>
    </div>
}

