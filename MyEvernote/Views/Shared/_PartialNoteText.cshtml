@model MyEvernote.Entities.Note 

<div class="row">
	<div class="col-md-12">
		<h3 class="text-center">
			@Model.Text.Split()[0]
		</h3>
	</div>
	<div class="col-md-12">
		<hr />
	</div>
	<div class="col-md-12 text-right">
		<span class="fa fa-user"></span> @Model.Owner.UserName<br />
		<span class="fa fa-clock-o"></span> @Model.ModifiedOn
	</div>
	<div class="col-md-12">
		<hr />
	</div>
	<div class="col-md-12">
		<p class="text-justify">
			@Model.Text
		</p>
	</div>
</div>
