@using MyEvernote.Entities
@model EvernoteUser
@{
    ViewBag.Title = "Your Profile";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<div class="container" style="margin-top: 100px; margin-bottom: 100px ">
    <div class="row">
        <h2>@ViewBag.Title</h2>
        <hr />
    </div>
    <div class="row">
        <div class="col-md-2">
            <img src="~/images/@Model.ProfileImageFileName" class="img-circle" width="128" height="128" />
        </div>

        <div class="col-md-6">
            <h3>@(Model.Name + " " + Model.SurName)</h3>
            <br />
            <h6>
                <b>Username:</b>   @Model.UserName
            </h6>
            <h6>
                <b>Email:</b>   @Model.Email
            </h6>
            <br />
            <h6>
                <a href="#" class="text-info ">More...</a>
            </h6>
        </div>


        <div class="col-md-4 text-right">

            <a class=" dropdown-toggle btn btn-info btn-sm" href="#" id="" role="button"
               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <span class="fa fa-gear"></span> Options
            </a>
            <div class="dropdown-menu bg-info" aria-labelledby="navbarDropdownMenuLink">
                <a class="dropdown-item text-black" href="@Url.Action("EditProfile")">
                    <span class="fa fa-edit">&nbsp;</span>
                    Modify
                </a>
                <a class="dropdown-item text-black" href="@Url.Action("DeleteProfile")" onclick="return confirm('Are you sure remove this account?');">
                    <span class="fa fa-trash">&nbsp;</span>
                    Delete
                </a>
            </div>



        </div>
    </div>
</div>

